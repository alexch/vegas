<% if request.GET.any? %>
  <h3>GET</h3>
  <table>
    <thead>
      <tr>
        <th>Variable</th>
        <th>Value</th>
      </tr>
    </thead>
    <tbody>
      <% i = 1 %>
      <% request.GET.sort_by { |k, v| k.to_s }.each do |key, val| %>
        <tr class="<%= i % 2 == 0 ? "even" : "odd" %>">
          <td><%=h key %></td>
          <td class="code"><div><%=h val %></div></td>
        </tr>
        <% i += 1 %>
      <% end %>
    </tbody>
  </table>
<% end %>

